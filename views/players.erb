<table border="0" cellspacing="5" cellpadding="5">
	<tr>
		<th>Name</th>
		<th>Played</th>
		<th>Wins</th>
		<th>Losses</th>
		<th>Win/Loss</th>
		<th>Average scored</th>
		<th>Average conceded</th>
		<th>Popular Teammates</th>
		<th>Popular Opponents</th>
		<th>Current Form</th>
	</tr>
	<% for player in @sorted_players do %>
	<tr>
		<td><%= player_link(player) %></td>
		<td><%= @stats.played[player.id] %></td>
		<td><%= @stats.wins[player.id] %></td>
		<td><%= @stats.losses[player.id] %></td>
		<td><%= format("%.3f", @stats.ratios[player.id]) %></td>
		<td><%= format("%.3f", @stats.average_goals_scored[player.id]) %></td>
		<td><%= format("%.3f", @stats.average_goals_conceded[player.id]) %></td>
		<td><%= format_most_popular(@stats.most_popular_teammates[player.id]) %></td>
		<td><%= format_most_popular(@stats.most_popular_opponents[player.id]) %></td>
		<td><%= streaks_to_images(@stats.streaks[player.id]) %></td>
	</tr>
	<% end %>
</table>

Longest winning streak: <%= @stats.longest_wins[0] %> <br/>
<ul>
	<% for player_id in @stats.longest_wins[1] do %>
		<li><%= @players.get(player_id).name %></li>
	<% end %>
</ul>
Longest losing streak: <%= @stats.longest_losses[0] %> <br />
<ul>
	<% for player_id in @stats.longest_losses[1] do %>
		<li><%= @players.get(player_id).name %></li>
	<% end %>
</ul>

