<table border="0" cellspacing="5" cellpadding="5">
	<tr>
		<th>Name</th>
		<th>Played</th>
		<th>Wins</th>
		<th>Losses</th>
		<th>Win/Loss</th>
		<th>Wins %</th>
		<th>Matches</th>
		<th>Match wins</th>
		<th>Match losses</th>
		<th>Win/Loss</th>
		<th>Wins %</th>
		<th>Current Form</th>
	</tr>
	<% for player in @sorted_players do %>
	<tr>
		<td><%= player_link(player) %></td>
		<td><%= @stats.played[player.id] %></td>
		<td><%= @stats.wins[player.id] %></td>
		<td><%= @stats.losses[player.id] %></td>
		<td><%= format("%.3f", @stats.ratios[player.id]) %></td>
		<td><%= format("%.2f", @stats.wins_percentage[player.id]) %>%</td>
		<td><%= @stats.match_total[player.id]%></td>
		<td><%= @stats.match_wins[player.id]%></td>
		<td><%= @stats.match_losses[player.id]%></td>
		<td><%= format("%.2f", @stats.match_ratios[player.id])%></td>
		<td><%= format("%.2f", @stats.match_wins_percentage[player.id]) %>%</td>
		<td><%= streaks_to_images(@stats.streaks[player.id]) %></td>
	</tr>
	<% end %>
</table>

Longest winning streak: <%= @stats.longest_wins[0] %> <br/>
<ul>
	<% for player_id in @stats.longest_wins[1] do %>
		<li><%= @players.get(player_id).name %></li>
	<% end %>
</ul>
Longest losing streak: <%= @stats.longest_losses[0] %> <br />
<ul>
	<% for player_id in @stats.longest_losses[1] do %>
		<li><%= @players.get(player_id).name %></li>
	<% end %>
</ul>

